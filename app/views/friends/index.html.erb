<br>
<div class='center'>
	<div class='waves-effect waves-light btn blue-grey lighten-1'>
	  <i class="material-icons left">search</i>
	  <%= link_to "find friends", user_new_friend_path %>
	</div>
</div>

<br>
<ul class="collection-header with">
	<li class="collection-header center"><h5><%= @user.first_name %>'s Friends</h5></li>
	<% @user.friends.each do |friend| %>
	<div class="container col s12 m8 offset-m2 l6 offset-l3">
		<span>
	    <div class="card-panel red darken-4">
				<div class="row valign-wrapper">
			    <div class="col s4">
						<p class="collection-item avatar">
							<img src='<%= friend.avatar.url(:thumb) %>' alt="" class="circle responsive-img">
						</p>
					</div>
					<div class="col l4 s8 black-text">
						<span class="title">
							<div class='waves-effect waves-light btn blue-grey lighten-1 right center-buttons'>
				        <%= link_to "#{friend.first_name}", user_path(friend ) %>
				      </div>
				    </span><br><br>
				    <div class='waves-effect waves-light btn blue-grey lighten-1 right center-buttons'>
							<a href="tel:+<%= friend.phone %>">Call</a>
						</div>
					</div>
				</div>
			</div>
		</span>
	</div>
</ul>
	<% end %>

