<div>
  <h4><%= @invitation.sender.first_name %> <%= @invitation.sender.last_name %></h4>
  <div>
    <p>has invited to meet you for a meal. <%= @invitation.message %></p>
  </div>
  <div>
    <%= form_for delete_invitation_path(@invitation), method: 'delete' do |f| %>
      <%= f.submit 'decline' %>
    <% end %>
    <%= form_for accept_invitation_path(@invitation), method: 'post', :html => {:id => 'invitation-acceptance-post'} do |f| %>
    <%= f.submit 'accept' %>
    <% end %>
  </div>
</div>

<script defer type="text/javascript">
  invitationsShowViewController()
</script>
