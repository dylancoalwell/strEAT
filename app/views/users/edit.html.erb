<%= render '/errors' %>
<br><h4 class='container center-align'>edit your account</h4><br>

<div class='container'>
  <%= form_for :user, url: "/users/#{@user.id}", method: 'PATCH' do |f| %>
    <div class='input-field'>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %><br>
    </div>

    <div class='input-field'>
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, label: 'last name' %><br>
    </div>

    <div class='input-field'>
      <%= f.label :email %><br>
      <%= f.text_field :email %><br>
    </div>

    <div class='input-field'>
      <%= f.label :phone %><br>
      <%= f.text_field :phone %><br>
    </div>

    <div class='input-field'>
      <%= f.label :password %><br>
      <%= f.text_field :password, type: :password %><br>
    </div>

    <div class='input-field'>
      <%= f.label :password_confirmation %><br>
      <%= f.text_field :password_confirmation, type: :password %><br>
    </div>

    <div class='file-field waves-effect waves-light btn blue-grey darken-1 right'>
      <%= f.label :change_profile_picture %><br>
      <%= f.file_field :avatar %><br>
    </div><br><br><br>

    <button class='waves-effect waves-light btn blue-grey darken-1 right' type="submit" name="action">edit
      <i class="material-icons left">done</i>
    </button>
  <% end %>
</div>
