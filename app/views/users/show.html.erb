<h1  class="container"><%= @user.first_name %> <%= @user.last_name %>'s Profile Page</h1>

<h2 class='container'> profile pic </h2>

<div class="container">
<% if current_user == @user %>
<h3> <%= link_to "Map", root_path %> </h3>
<h3> <%= link_to "Friends", user_friends_path(@user) %> </h3>
<h3> <%= link_to "Favorite Locations" %> </h3>


<% elsif current_user.friends_with? @user  %>

<h3> form to invite to lunch </h3>

<%= form_for @user, url: "/users/#{@user.id}", method: 'delete' do |f| %>
  <%= f.submit "unfriend" %>
<% end %>


<% else %>
<h3> "Add as friend" </h3>
<%= form_for @user, url: "/users/#{@user.id}" do |f| %>
  <%= f.submit "Add Friend" %>

</div>
<% end %>
<% end %>
