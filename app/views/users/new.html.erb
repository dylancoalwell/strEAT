<%= render '/errors' %>
<br><h4 class='container center-align'>register an account</h4><br>


<div class='container'>
  <%= simple_form_for :user, url: '/users' do |f| %>
    <div class='input-field'>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %><br>
    </div>

    <div class='input-field'>
      <%= f.text_field :last_name, label: 'last name' %><br>
    </div>

    <div class='input-field'>
      <%= f.label :email %><br>
      <%= f.text_field :email %><br>
    </div>

    <div class='input-field'>
      <%= f.label :phone %><br>
      <%= f.text_field :phone %><br>
    </div>

    <div class='input-field'>
      <%= f.label :password %><br>
      <%= f.text_field :password, type: :password %><br>
    </div>

    <div class='input-field'>
      <%= f.label :password_confirmation %><br>
      <%= f.text_field :password_confirmation, type: :password %><br>
    </div>

    <div class='file-field btn-large text-white'>
      <%= f.label :profile_picture %><br>
      <%= f.input :avatar, as: :file %><br>
    </div>

    <div class='waves-effect waves-light btn light-blue darken-3'>
      <%= f.submit 'register' %>
    </div>
  <% end %>
</div>
